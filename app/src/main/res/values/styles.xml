<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_currency_text_input" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@null</item>
        <item name="boxStrokeColor">#1789DB</item>
        <item name="hintTextColor">#1789DB</item>
        <item name="android:textColorHint">#1789DB</item>
        <item name="android:hint">label</item>
    </style>
    <style name="style_currency_label">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="style_add_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_bottom_sheet</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="titleTextColor">#808080</item>
    </style>
    <style name="ChipSearch" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_search_chip</item>
        <item name="chipStrokeColor">#1789DB</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_search_chip</item>
        <item name="android:textSize">14sp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>
    <style name="person_info_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <style name="btn_personal_page_style">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:textColor">#1789DB</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52sp</item>
    </style>
</resources>